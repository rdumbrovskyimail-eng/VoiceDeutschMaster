rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // users/{userId}/** — пользователь видит только свои файлы
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null
                         && request.auth.uid == userId
                         && request.app != null;
    }
  }
}