<?xml version="1.0" encoding="utf-8"?>
<network-security-config>

    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>

    <domain-config cleartextTrafficPermitted="false">
        <!-- googleapis.com с includeSubdomains покрывает всё необходимое:
             firebasevertexai.googleapis.com  — firebase-ai / Gemini Live API
             firebaseappcheck.googleapis.com  — App Check токены
             firestore.googleapis.com         — Firestore sync
             firebasestorage.googleapis.com   — Cloud Storage
             firebase.googleapis.com          — общие Firebase сервисы
             Старый домен generativelanguage.googleapis.com удалён —
             прямой WebSocket к Gemini API заменён firebase-ai SDK proxy. -->
        <domain includeSubdomains="true">googleapis.com</domain>
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </domain-config>

    <debug-overrides>
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </debug-overrides>

</network-security-config>